<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/editRadiatorTemp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Температура батареи (°C)"
        android:inputType="numberDecimal"/>

    <EditText
        android:id="@+id/editSourceTemp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Температура источника воды (°C)"
        android:inputType="numberDecimal"/>

    <Button
        android:id="@+id/btnSaveHeatEntry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Сохранить"/>

<Button
    android:id="@+id/btnClearHeatEntries"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Очистить" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerHeatEntries"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

	<androidx.appcompat.widget.Toolbar
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="?attr/colorPrimary"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    android:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

<TextView
    android:id="@+id/textSummary"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Среднее: -"
    android:textSize="16sp"
    android:paddingTop="8dp"
    android:textStyle="bold"/>

<TextView
    android:id="@+id/textSummary"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Среднее: -"
    android:textSize="16sp"
    android:paddingTop="8dp"
    android:textStyle="bold"/>

</LinearLayout>
