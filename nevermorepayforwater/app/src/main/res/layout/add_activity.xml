<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Метка "Локация" -->
    <TextView
        android:id="@+id/tvLoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/location"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Поле ввода названия города -->
    <EditText
        android:id="@+id/City"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/location_hint"
        android:inputType="text"
        app:layout_constraintTop_toTopOf="@+id/tvLoc"
        app:layout_constraintStart_toEndOf="@+id/tvLoc"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Кнопка "Найти координаты" -->
    <Button
        android:id="@+id/butFindCoords"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/koords"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/City"
        app:layout_constraintStart_toStartOf="@+id/City"/>

    <!-- Метка "Широта" -->
    <TextView
        android:id="@+id/tvLat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tvLat"
        android:textSize="20sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/butFindCoords"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Поле ввода широты -->
    <EditText
        android:id="@+id/etLat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/lat_hint"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toBottomOf="@+id/tvLat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Метка "Долгота" -->
    <TextView
        android:id="@+id/tvLon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tvLon"
        android:textSize="20sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/etLat"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Поле ввода долготы -->
    <EditText
        android:id="@+id/etLon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/lon_hint"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toBottomOf="@+id/tvLon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Кнопка "Сохранить" -->
    <Button
        android:id="@+id/butSave"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/save"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/etLon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/butCancel"
        app:layout_constraintHorizontal_weight="1"/>

    <!-- Кнопка "Отмена" -->
    <Button
        android:id="@+id/butCancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/cancel"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/etLon"
        app:layout_constraintStart_toEndOf="@+id/butSave"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"/>

</androidx.constraintlayout.widget.ConstraintLayout>
