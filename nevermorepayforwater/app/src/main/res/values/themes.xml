<resources>
    <!-- Light theme -->
    <style name="Theme.Nevermorepayforwater" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/light_primary</item>
        <item name="colorPrimaryVariant">@color/light_primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Backgrounds -->
        <item name="android:windowBackground">@color/light_background</item>
        <item name="android:colorBackground">@color/light_background</item>
        <item name="android:statusBarColor">@color/light_primary_variant</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/light_text_secondary</item>

        <item name="cardViewStyle">@style/CardView.Light</item>
        <item name="materialButtonStyle">@style/Button.Light</item>
        <item name="textInputStyle">@style/TextInput.Light</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="materialButtonOutlinedStyle">@style/Button.Outlined.Light</item>
        <item name="buttonStyle">@style/Button.Light</item>
    </style>

    <style name="CardView.Light" parent="CardView">
        <item name="cardBackgroundColor">@color/light_card</item>
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">8dp</item>
    </style>

    <style name="Button.Outlined.Light" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/light_primary</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/light_primary</item>
        <item name="backgroundTint">@color/light_card</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="Button.Light" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/light_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="TextInput.Light" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@color/light_primary</item>
        <item name="hintTextColor">@color/light_text_hint</item>
        <item name="android:textColorHint">@color/light_text_hint</item>
        <item name="android:textColor">@color/black</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
    </style>
</resources>